<% include ./partials/header_1 %>

<!-- Primary Navigation
============================================= -->
<nav id="primary-menu">

    <ul class="sf-js-enabled" style="touch-action: pan-y;">
        <li><a href="/"><div class="hover-effect">სიახლეები</div></a>
        </li>
        <li><a href="/manuals/smartphone-manuals"><div class="hover-effect">სმარფონების ინსტრუქცია</div></a>
        </li>
        <li><a href="/apps/apps-list"><div class="hover-effect">აპლიკაციები</div></a>
        </li>
        <li><a href="#"><div class="hover-effect">ბლოგი</div></a>
        </li>
    </ul>

    <% include ./partials/header_2 %> <!-- TOP SEARCH BAR -->

                </nav><!-- #primary-menu end -->

            </div>

        </div>

    </header><!-- #header end -->



    <!-- Content
    ============================================= -->
<div class="container">
    <div class="row">
        <div class="col-md-9 col-sm-12" id="my-container">
            <!-- Post Content
            ============================================= -->
            <div class="blog-title-container">
                <div class="show-blog-header">
                    <img src="<%= blogPost.billboard %>" alt="<%= blogPost.billboard %>">
                    <div class="blabla">
                    <ul class="entry-meta clearfix">
                        <li><i class="icon-calendar3"></i><%= blogPost.date.toDateString() %></li>
                        <li><a href="#"><i class="icon-user"></i><%= blogPost.author.fullname %></a></li>
                        <li><i class="icon-folder-open"></i> <a href="#"><%=blogPost.tag%></a></li>
                    </ul>

                        <div class="blog-share clearfix">
                                <a href="#" class="social-icon si-borderless si-text-color si-facebook" id="shareBtn" title="Facebook">
                                    <i class="icon-facebook"></i>
                                    <i class="icon-facebook"></i>
                                </a>
                                <a href="#" class="social-icon si-borderless si-text-color si-twitter" title="Twitter">
                                    <i class="icon-twitter"></i>
                                    <i class="icon-twitter"></i>
                                </a>
                                <a href="#" class="social-icon si-borderless si-text-color si-youtube" title="Youtube">
                                    <i class="icon-youtube"></i>
                                    <i class="icon-youtube"></i>
                                </a>
                        </div>
                    </div>
                    <div class="line"><h4><%= blogPost.title %></h4></div>
                </div>
            </div>

            <%- blogPost.content %>
             <!-- Comments
			============================================= -->
            <div id="comments" class="clearfix">
                <div class="fb-like" data-href="https://www.facebook.com/GsmGuruGeorgia/"
                     data-layout="standard" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
                <!-- Facebook Comments
                ============================================= -->
                <div class="fb-comments" data-width="100%" data-href="https://gsmguru.ge/client/Hot-News/<%= blogPost._id %>" data-numposts="5" data-colorscheme="light"></div>
                <!-- Facebook Comments end -->
            </div><!-- #comments end -->

        </div>

        <!-- Sidebar
        ============================================= -->
        <% var x = 5 %>
        <div class="sidebar-margins">
            <div class="col-md-3 col-sm-12">

                <div class="widget clearfix">
                        <h4>აპები</h4>
                    <div class="post-list-footer">
                        <% apps.apps.forEach(function (appData) { %>
                        <div class="spost clearfix">
                            <div class="entry-image">
                                <a href="/app/show/<%= appData._id %>">
                                    <img src="<%= appData.icon %>" >
                                </a>
                            </div>
                            <div class="entry-c">
                                <div class="entry-title">
                                    <a href="/app/show/<%= appData._id %>"><h4 id="app-h4-color"><%= appData.name %> (<%= appData.version %>)</h4></a>
                                    <ul class="entry-meta"><li><%= appData.date.toDateString() %></li></ul>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                    <div class="widget-footer">
                        <a href="/apps/apps-list">ყველა აპლიკაცია</a>
                    </div>
                </div>

                <div class="widget clearfix">
                    <h4>ახალი დამატებული</h4>
                    <div class="post-list-footer">
                        <% for(i = 0; i < x; i++) { %>
                        <div class="spost clearfix">
                            <div class="entry-image">
                                <a href="#">
                                    <img src="../../client/images/1.jpg" alt="">
                                </a>
                            </div>
                            <div class="entry-c">
                                <div class="entry-title">
                                    <a href="#"><h4>როგორ გადმოვწეროთ აპლიკაციები ანდროიდზე</h4></a>
                                    <ul class="entry-meta"><li>10.03.2017</li></ul>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div><!-- .sidebar end -->
            
        </div>
    </div>
</div>
</section><!-- #content end -->

<script>
  document.getElementById('shareBtn').onclick = function() {
    FB.ui({
      method: 'share',
      display: 'popup',
      href: 'https://gsmguru.ge/Hot-News/<%= blogPost._id %>',
    }, function(response){});
  }
</script>


